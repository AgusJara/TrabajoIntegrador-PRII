<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- INCLUIR PARTIALS HEADER --> 
	<% if (locals.usuarioLogueado != undefined) { %>
		<%- include('./partials/headerLogueado')%>
	<% } else { %>
		<%- include('./partials/header')%>
	<% } %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<!-- PARA MOSTRAR TODOS LOS PRODUCTOS, LA RUTA DE PUBLICADO POR NO FUNCIONA!!!! VER BIEN CON LA VIEW DE PROFILE-->
			<% for(i=0; i<productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%=productos[i].imagen%>" alt="<%= productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombre %> </h2>
								<p> <%= productos[i].descripcion %> </p>
							</article>
						</a>
						<p class="usuario"> Publicado por: <a href="/users/profile/<%=productos[i].producto_usuario.id%>"> <%= productos[i].producto_usuario.usuario %>
						</a>
						</p>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>


<%- include('./partials/footer') %>  

</body>	
</html>