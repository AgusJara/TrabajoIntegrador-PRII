<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<% if (locals.usuarioLogueado != undefined) { %>
		<%- include('./partials/headerLogueado')%>
	<% } else { %>
		<%- include('./partials/header')%>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
						<img src="/images/users/<%=usuario.fotoDePerfil%>" alt="foto de perfil" class="foto-perfil"> 
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.usuario%> 
						<a href="/users">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p><%=usuario.email%></p>  
					<ul>
						<li> Productos: <%=productos.length%> </li> <!-- ESTO TIENE QUE SER DINAMICO!!! -->
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	
	<!-- /Datos del usuario -->
	
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/detalle/<%=productos[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productos[i].imagen%>" alt="<%=productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre %></h2>
							<p><%= productos[i].descripcion %> </p>
							<p></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		
			
	
	<!-- /Mis productos -->


	<%- include('./partials/footer')%> 
	
</body>	
</html>